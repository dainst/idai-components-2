{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "strictNullChecks": true,
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "release",
    "src",
    "test"
  ]
}